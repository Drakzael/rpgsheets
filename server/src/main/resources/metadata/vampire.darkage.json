    }, {
      "rows": [
        { "name": "Santé", "editor": "health", "values": [ "health.blunt", "health.lethal", "health.aggravated" ] },
        { "type": "spacer" },
        { "type": "title", "name": "Expérience" },
        { "editor": "text", "value": "character.experience", "defaultCount": 2 }
